mixin certificationTable(rows)
  table#certifications-table
    thead
      tr
        th Domain
          button.sort-btn(data-column="domain") ↕
        th Status
          button.sort-btn(data-column="status") ↕
        th Certification Name
          button.sort-btn(data-column="certName") ↕
        th Organization
          button.sort-btn(data-column="orgName") ↕
        th Link
          button.sort-btn(data-column="link") ↕
        th Price
          button.sort-btn(data-column="price") ↕
        th Work Experience Required
          button.sort-btn(data-column="workExperienceRequired") ↕
        th Description
          button.sort-btn(data-column="description") ↕
    tbody
      each row in rows
        tr
          td #{row.domain}
          td #{row.status}
          td #{row.certName}
          td #{row.orgName}
          td: a(href=row.link, target="_blank") Link
          td $#{row.price}
          td #{row.workExperienceRequired ? 'Yes' : 'No'}
          td #{row.description}
